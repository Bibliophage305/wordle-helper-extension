{
  "name": "Wordle Helper",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "An extension to help you with Wordle",
  "homepage_url": "https://github.com/Bibliophage305/wordle-helper-extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["https://www.powerlanguage.co.uk/wordle/"],
      "js": ["js/script.js"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ]
}